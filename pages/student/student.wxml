<view class="">
  <view class="clearfix work-content">
    <view class="work-line left"></view>
    <view class="left work-text">功能</view>
    <view class="work-line right"></view>
  </view>
  
  
  <view class="weui-grids">
      <block wx:for="{{works}}" wx:key="index">
          <navigator url="{{item.link}}" class="weui-grid" hover-class="weui-grid_active">
              <image class="weui-grid__icon" src="{{item.imgUrl}}" />
              <view class="weui-grid__label">{{item.label}}</view>
          </navigator>
      </block>
  </view>


 
</view>
